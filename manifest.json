{
  "manifest_version": 2,
  "name": "Babble",
  "version": "1.2",
  "description": "Chat in your language with friends in their language",
  "default_locale": "en",
  "icons": {
  	"16": "img/icon16.png",
  	"48": "img/icon48.png",
  	"128": "img/icon128.png"
  },
  
  "content_scripts":[
    {
    	"matches": ["http://mail.google.com/*", "https://mail.google.com/*"],
    	"css" : ["css/style.css"],
    	"js" : ["js/jquery.js" , "js/translate.js" , "js/jquery.cookie.js"]
    }
  ]
}